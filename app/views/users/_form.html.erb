<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="row mt-4">
          <%= f.label :username, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="row mt-4">
          <%= f.label :email, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>

        <div class="row mt-4">
          <%= f.label :password, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="text-center mt-4 mb-4">
          <%= f.submit "Sign Up", class: "btn btn-outline-success text-center" %>
        </div>
        </div>
      <% end %>
      </div>

</div>