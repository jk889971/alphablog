<div class="container mb-5">

  <div class="row mt-2">
    <div class="col-3">
    </div>
    <div class="col-6">
      <h1 class="mt-4 text-center text-white">Users List</h1>
      <div class="flickr_pagination mb-3 mt-3">
        <%= will_paginate @users, :container => false %>
      </div>
      <% @users.each do |user| %>
        <div class="card bg-dark shadow rounded text-center">
          <div class="card-header text-white">
            <%= user.username %>
            <div class="text-muted text-right">
              <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
            </div>
          </div>
          <div class="card-body">
            <p class="card-text text-white"><%= pluralize(user.articles.count, "article") %></p>
            <%= link_to "View Profile", user, class: "btn btn-outline-success" %>
          </div>
        </div>
      <% end %>
      <div class="flickr_pagination mt-3 mb-4">
        <%= will_paginate @users, :container => false %>
      </div>
    </div>
    <div class="col-3">
    </div>
  </div>

</div>