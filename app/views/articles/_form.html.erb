<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="row mt-4 mb-4">
          <%= f.label :title, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="row">
          <%= f.label :description, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="text-center mt-4 mb-4">
          <%= f.submit class: "btn btn-outline-success text-center" %>
          <%= link_to 'Cancel', articles_path, class: "btn btn-outline-danger text-center" %>
        </div>
        </div>
      <% end %>
      </div>

</div>