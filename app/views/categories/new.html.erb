<h1 class="mt-4 text-center text-white">Create Category</h1>

<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="row mt-4">
          <%= f.label :name, "Category Name", class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>

        <div class="text-center mt-4 mb-4">
          <%= f.submit class: "btn btn-outline-success text-center" %>
        </div>
        </div>
      <% end %>
      </div>

</div>