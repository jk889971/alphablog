<div class="container mb-5">

  <div class="row mt-2">
    <div class="col-3">
    </div>
    <div class="col-6">
      <h1 class="mt-4 text-center text-white">Categories List</h1>
      <div class="flickr_pagination mb-3 mt-3">
        <%= will_paginate @categories, :container => false %>
      </div>
      <% @categories.each do |category| %>
        <div class="card bg-dark shadow rounded text-center">
          <div class="card-header text-white">
            <%= category.name %>
          </div>
          <div class="card-body">
<!--            <p class="card-text text-white"><%#= pluralize(category.articles.count, "article") %></p>-->
            <%= link_to "View", category, class: "btn btn-outline-success" %>
          </div>
        </div>
      <% end %>
      <div class="flickr_pagination mt-3 mb-4">
        <%= will_paginate @categories, :container => false %>
      </div>
    </div>
    <div class="col-3">
    </div>
  </div>

</div>